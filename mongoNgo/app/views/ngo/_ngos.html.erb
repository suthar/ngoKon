<% @ngos.each do |ngo| %>
    <% @pan_id = rand(36**4).to_s(36) %>
    <div class="panel panel-default">
        <div class="panel-heading">
             <h4 class="panel-title">
                  <a data-toggle="collapse" data-parent="#accordion" href="#<%= @pan_id %>" class=""><%= ngo.title %></a>
             </h4>
        </div>
        <div id="<%= @pan_id %>" class="panel-collapse collapse">
            <div class="panel-body">
                <ul class="nav nav-tabs">
                  <li class="active"><a data-toggle="tab" href="#<%= 'menu1'+@pan_id %>">Details</a></li>
                  <li><a data-toggle="tab" href="#<%= 'menu2'+@pan_id %>">Contacts</a></li>
                  <li><a data-toggle="tab" href="#<%= 'menu3'+@pan_id %>">Genres</a></li>
                  <li><a data-toggle="tab" href="#<%= 'menu4'+@pan_id %>">Work & Awards</a></li>
                  <li><a data-toggle="tab" href="#<%= 'menu5'+@pan_id %>">People</a></li>
                  <li><a data-toggle="tab" href="#<%= 'menu6'+@pan_id %>">Registration Info</a></li>
                </ul>

                <div class="tab-content">
                  <div id="<%= 'menu1'+@pan_id %>" class="tab-pane fade in active">
                    <h5>Active Years: <small><%= ngo.active_years %></small></h5>
                    <h5>Description: <small><%= ngo.description %></small></h5>
                    <h5>State: <small><%= ngo.state %></small></h5>
                    <h5>Operation states: <small><%= ngo.op_state.join(",") %></small></h5>
                    <h5>Operation districts: <small><%= ngo.op_dist.join(",") %></small></h5>
                  </div>
                  <div id="<%= 'menu2'+@pan_id %>" class="tab-pane fade">
                    <h5>Mobile: <small><%= ngo.mobile %></small></h5>
                    <h5>Telephone: <small><%= ngo.telephone %></small></h5>
                    <h5>Email: <small><%= ngo.email %></small></h5>
                    <h5>Fax: <small><%= ngo.fax %></small></h5>
                    <h5>Website: <small><%= ngo.website %></small></h5>
                    <h5>Address: <small><%= ngo.address %></small></h5>
                  </div>
                  <div id="<%= 'menu3'+@pan_id %>" class="tab-pane fade">
                    <h5>Working Areas: <small><%= ngo.genres.join(",") %></small></h5>
                  </div>
                  <div id="<%= 'menu4'+@pan_id %>" class="tab-pane fade">
                    <h5>Key work: <small><%= ngo.key_work.join(",") %></small></h5>
                    <h5>Awards: <small><%= ngo.awards.join(",") %></small></h5>
                  </div>
                  <div id="<%= 'menu5'+@pan_id %>" class="tab-pane fade">
                    <% ngo.people.each do |key, value| %>
                        <h5><%= key %>: <small><%= value %></small></h5>
                    <% end %>
                  </div>
                  <div id="<%= 'menu6'+@pan_id %>" class="tab-pane fade">
                    <h5>Registration ID: <small><%= ngo.reg_id %></small></h5>
                    <h5>Parent organization: <small><%= ngo.registration_info[:parent_org] %></small></h5>
                    <h5>Registration Number: <small><%= ngo.registration_info[:reg_number] %></small></h5>
                    <h5>Registred With: <small><%= ngo.registration_info[:reg_with] %></small></h5>
                    <h5>Registration City: <small><%= ngo.registration_info[:reg_city] %></small></h5>
                    <h5>Registration Country: <small><%= ngo.registration_info[:reg_country] %></small></h5>
                    <h5>Registration Date: <small><%= ngo.registration_info[:reg_date] %></small></h5>
                  </div>
                </div>
            </div>
        </div>
    </div>

<% end %>
<%= will_paginate @ngos, renderer: BootstrapPagination::Rails %>
